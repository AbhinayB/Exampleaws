<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<div ng-controller="FiletoBucket" layout-margin layout-padding>
    <choose-file layout="row" flex="30">
        <input id="fileInput" type="file" class="ng-hide">
        <md-input-container flex class="md-block">
            <input type="text" ng-model="fileName" disabled>
            <div class="hint">Select your file</div>
        </md-input-container>
        <div>
            <md-button id="uploadButton" class="md-fab md-mini">
                <md-icon class="material-icons">attach_file</md-icon>
            </md-button>
            <md-button class="md-raised md-primary">
                Upload
            </md-button>
        </div>
    </choose-file>
</div>